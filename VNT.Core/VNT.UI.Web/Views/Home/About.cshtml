@using System.Security.Claims
@using System.Security.Principal
@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>
@{
    var principal = HttpContext.Current.User;
    var identity = (ClaimsIdentity)principal.Identity;
    var msgRole = string.Empty;
    if (identity.Claims.Any(claim => claim.Type == ClaimTypes.Role && claim.Value == "Admin"))
    {
        msgRole = "I'm in Admin role";
    }
}
Hello @identity.Name, @identity.AuthenticationType, @identity.IsAuthenticated, @msgRole


